    <UserControl x:Class="WebberCross.BdcModelBuilder.UIControls.TreeNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
    <Grid>

        <StackPanel Orientation="Horizontal">            
            <Image Width="16" Height="16" Margin="3,0" Source="{Binding Source, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}" />
            <CheckBox Width="16" Height="16" Margin="3,0" IsChecked="{Binding IsChecked}" />
            <TextBlock Text="{Binding Text}" />
        </StackPanel>
    </Grid>
</UserControl>
